# ============================================
# .htaccess MÍNIMO - SIN INTERFERENCIAS
# Solo lo esencial para React Router
# ============================================

# React Router - Redirigir todas las rutas al index.html
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Si la solicitud NO es para un archivo existente
    RewriteCond %{REQUEST_FILENAME} !-f
    # Y NO es para un directorio existente
    RewriteCond %{REQUEST_FILENAME} !-d
    # Y NO es para un archivo estático (js, css, imágenes, etc.)
    RewriteCond %{REQUEST_URI} !\.(?:css|js|jpe?g|gif|png|svg|ico|webp|woff2?|ttf|eot|pdf|json|xml)$ [NC]
    # Entonces redirigir al index.html
    RewriteRule ^ index.html [L]
</IfModule>

