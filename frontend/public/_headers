/* Security Headers for Netlify/Vercel deployment */

/*
  # ============================================
  # CSP DESACTIVADO PARA TAWK.TO (CHAT OBLIGATORIO)
  # ============================================
  # El Content-Security-Policy está desactivado para permitir que Tawk.to funcione
  # Si necesitas reactivarlo, descomenta y ajusta la línea siguiente:
  # Content-Security-Policy: default-src * 'unsafe-inline' 'unsafe-eval' data: blob:; script-src * 'unsafe-inline' 'unsafe-eval' data: blob:; style-src * 'unsafe-inline' data:; font-src * data:; img-src * data: blob:; connect-src * wss: ws:; frame-src *; worker-src * blob:; child-src * blob:; object-src 'none'; base-uri *; form-action *; frame-ancestors *;
  
  # X-Frame-Options removido - permite Tawk.to sin restricciones
  
  # Prevent MIME type sniffing
  X-Content-Type-Options: nosniff
  
  # Enable XSS protection in browsers
  X-XSS-Protection: 1; mode=block
  
  # Control referrer information
  Referrer-Policy: strict-origin-when-cross-origin
  
  # Permissions Policy (Feature Policy)
  Permissions-Policy: camera=(), microphone=(), geolocation=(self), payment=(), usb=(), magnetometer=(), gyroscope=(), accelerometer=()
  
  # HTTP Strict Transport Security (HSTS) - Force HTTPS
  Strict-Transport-Security: max-age=63072000; includeSubDomains; preload
  
  # Expect-CT for certificate transparency
  Expect-CT: max-age=86400, enforce
  
  # Cross-Origin policies
  Cross-Origin-Embedder-Policy: require-corp
  Cross-Origin-Opener-Policy: same-origin
  Cross-Origin-Resource-Policy: same-origin
  
  # Cache control for security
  Cache-Control: no-store, no-cache, must-revalidate, proxy-revalidate
  Pragma: no-cache
  Expires: 0

