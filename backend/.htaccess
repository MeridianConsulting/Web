# Habilitar PHP
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_flag log_errors On
</IfModule>

# Permitir acceso desde cualquier origen (CORS)
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
</IfModule>

# Reescritura de URLs (si es necesario)
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /backend/
    
    # Si el archivo o directorio existe, servirlo directamente
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # De lo contrario, redirigir a index.php
    # RewriteRule ^(.*)$ index.php?$1 [QSA,L]
</IfModule>

# Permitir acceso a archivos PHP
<Files "*.php">
    Order Allow,Deny
    Allow from all
</Files>

# Proteger archivos de configuración
<FilesMatch "^(config\.php|db\.php)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Permitir acceso a index.php específicamente
<Files "index.php">
    Order Allow,Deny
    Allow from all
</Files>

